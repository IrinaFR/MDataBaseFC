void __fastcall TForm1::N9Click(TObject *Sender)
{
	TfrxReport *Report;
	Report = Form6->frxReport1;
	Report->Preview = Form6->frxPreview1;
	Report->ShowReport();
	Form6->WindowState = wsMaximized;
	Form6->Show();
}
